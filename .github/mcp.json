{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "azdo-business-requirements": {
      "command": "python3",
      "args": [
        "${workspaceFolder}/mcp_server.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "AZDO_ORG_URL": "${env:AZDO_ORG_URL}",
        "AZDO_PAT_TOKEN": "${env:AZDO_PAT_TOKEN}",
        "AZDO_PROJECT_NAME": "${env:AZDO_PROJECT_NAME}",
        "GROQ_API_KEY": "${env:GROQ_API_KEY}"
      }
    }
  }
}
